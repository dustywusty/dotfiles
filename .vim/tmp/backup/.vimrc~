set nocompatible

" indenting 
set ai
set si

" scrollbar
set sidescrolloff=2
set numberwidth=4

" highlight cursor
set cursorline

" search
set hlsearch
set incsearch
set ignorecase
set smartcase

" colors
set background=dark
syntax on
colorscheme molokai 

" status line
set showcmd
set ruler
set ch=2

" backups
set backupdir=~/.vim/tmp/backup
set backup
set directory=~/.vim/tmp/swap

" invisible
set list
set listchars=tab:▸\ ,eol:¬

" misc
set number
